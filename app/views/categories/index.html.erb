<h1>Categories</h1>

<p>
  <%= link_to 'Add Category', new_category_path %>
</p>

<br />

<ul class="unstyled">
  <% @categories.each do |cat| %>
  <li>
    <%= cat.name %>
    <%= link_to 'Edit', edit_category_path(cat) %>
    <%= link_to 'Delete', category_path(cat), :method => 'delete' %>
  </li>
  <% end %>
</ul>
